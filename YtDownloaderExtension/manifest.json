{
  "manifest_version": 3,
  "name": "YouTube to YT-DLP App",
  "version": "1.4",
  "description": "Send YouTube videos to YT-DLP Spring Boot application with cookies support",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://*.youtube.com/*",
    "http://localhost:8080/*",
    "http://127.0.0.1:8080/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "YT-DLP Settings"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "incognito": "spanning"
}